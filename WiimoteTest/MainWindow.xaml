<Window x:Class="WiimoteTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiimoteTest"
        mc:Ignorable="d"
        Title="Wiimote Test" Height="520" Width="800" Closed="Window_Closed">
    <DockPanel LastChildFill="True">
        <TabControl ItemsSource="{Binding WiimoteInfoList}" SelectedIndex="{Binding SelectedIndex}">
        </TabControl>
    </DockPanel>
</Window>
